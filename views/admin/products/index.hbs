                                      <a href="/admin/products/view/{{_id}}"><button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button></a>
                                      <a href="/admin/products/edit/{{_id}}"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                      <a href="/admin/products/delete/{{_id}}"><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                                  </td>
                              </tr>
                              {{/each}}                              
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
