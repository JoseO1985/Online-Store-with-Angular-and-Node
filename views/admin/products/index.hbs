<h1>{{{title}}}</h1>
	<div class="row mt">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <h4><a href="/admin/products/new">Agregar producto </a></h4><hr>
                          <table class="table table-striped table-advance table-hover">
                              <thead>
                              <tr>
                                  <th><i class="fa fa-bullhorn"></i> Nombre</th>
                                  <th class="hidden-phone"><i class="fa fa-question-circle"></i> Imagen</th>
                                  <th><i class="fa fa-bookmark"></i> Descripci√≥n</th>
                                  <th><i class=" fa fa-edit"></i> Precio</th>
                                  <th><i class=" fa fa-edit"></i> Stock</th>
